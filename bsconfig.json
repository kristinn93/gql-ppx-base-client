{
  "name": "rescript-project-template",
  "version": "0.0.1",
  "sources": {
    "dir": "src",
    "subdirs": true
  },
  "package-specs": {
    "module": "commonjs",
    "in-source": true
  },
  "suffix": ".bs.js",
  "bs-dependencies": [
    "@reasonml-community/graphql-ppx",
    "@glennsl/bs-json",
    "bs-fetch",
    "reason-future"
  ],
  "ppx-flags": ["@reasonml-community/graphql-ppx/ppx"],
  "bsc-flags": ["-open Belt"],
  "graphql": {
    "schema": "schema.json"
  },
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    },
    {
      "module": "commonjs",
      "in-source": false
    }
  ],
  "warnings": {
    "error": "+101"
  }
}
